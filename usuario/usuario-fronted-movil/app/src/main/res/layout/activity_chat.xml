<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutChat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chatBackground">

    <!-- Header del chat estilo WhatsApp -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chatHeaderBackground"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/headerChat"
            style="@style/Widget.App.ChatHeader"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingHorizontal="@dimen/spacing_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnVolverChat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/chatHeaderText"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgPerfilChat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:src="@drawable/default_avatar"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/Widget.App.WorkerAvatar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/txtNombreChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del Trabajador"
                        android:textAppearance="@style/TextAppearance.App.WorkerName"
                        android:textColor="@color/chatHeaderText" />

                    <TextView
                        android:id="@+id/txtEstadoChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En lÃ­nea"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:textColor="@color/chatHeaderText"
                        android:alpha="0.8" />

                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Lista de mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMensajes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Campo de texto inferior -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/chatInputBackground"
        app:strokeColor="@color/chatInputBorder"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_medium">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/messageInputLayout"
                style="@style/Widget.App.ChatInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_escribe_mensaje"
                app:boxStrokeWidth="0dp"
                app:boxStrokeColor="@android:color/transparent"
                app:hintTextColor="@color/textMediumEmphasis">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:textAppearance="@style/TextAppearance.App.ChatMessage"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEnviar"
                style="@style/Widget.App.ChatSendButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/spacing_medium"
                android:src="@drawable/ic_send_modern"
                app:fabSize="mini" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
