<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small">

    <!-- Burbuja de mensaje -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/txtMensajeEnviado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bubble_sent"
            android:textAppearance="@style/TextAppearance.App.MessageSent"
            android:padding="12dp"
            android:text="Hola, ¿cómo estás?"
            android:maxWidth="280dp"
            android:layout_marginBottom="4dp" />

        <!-- Hora del mensaje -->
        <TextView
            android:id="@+id/txtHoraEnviado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:30"
            android:textAppearance="@style/TextAppearance.App.MessageTime"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

</LinearLayout>
