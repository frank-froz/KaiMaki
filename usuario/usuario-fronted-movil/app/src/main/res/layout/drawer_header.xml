<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/drawerBackground"
    android:padding="@dimen/spacing_large">

    <!-- Logo y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_medium">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/kaimaki_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginEnd="@dimen/spacing_medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaimaki"
            android:textAppearance="@style/TextAppearance.App.Headline"
            android:textColor="@color/drawerText" />

    </LinearLayout>

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/outline"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <!-- Información del usuario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textAppearance="@style/TextAppearance.App.Body"
        android:textColor="@color/textMediumEmphasis"
        android:layout_marginBottom="@dimen/spacing_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario@kaimaki.com"
        android:textAppearance="@style/TextAppearance.App.Caption"
        android:textColor="@color/textSecondary" />

</LinearLayout> 