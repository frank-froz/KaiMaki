<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!--  Banner de bienvenida -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_banner_home"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSaludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Hola!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />



            <TextView
                android:id="@+id/tvSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué necesitas hoy?"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_below="@id/tvSaludo"
                android:layout_marginTop="6dp" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_home_repair"
                android:contentDescription="Icono de bienvenida"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!--  Buscador de oficios -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar un oficio..."
            android:layout_marginTop="24dp"
            app:startIconDrawable="@drawable/ic_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--  Servicios Destacados -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios destacados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/textPrimary" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tarjeta oficio -->
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_electrician" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electricista"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>


                <!-- Repite más tarjetas según necesidad -->

            </LinearLayout>
        </HorizontalScrollView>

        <!--  Mensaje promocional o consejo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:background="@drawable/card_info_background"
            android:text="¿Sabías que puedes guardar trabajadores como favoritos?"
            android:textColor="@color/textPrimary"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
