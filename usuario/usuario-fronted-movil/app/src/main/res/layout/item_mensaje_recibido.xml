<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small">

    <!-- Burbuja de mensaje -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/txtMensajeRecibido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_bubble_received"
            android:textAppearance="@style/TextAppearance.App.MessageReceived"
            android:padding="12dp"
            android:text="Hola, estoy bien. ¿En qué puedo ayudarte?"
            android:maxWidth="280dp"
            android:layout_marginBottom="4dp" />

        <!-- Hora del mensaje -->
        <TextView
            android:id="@+id/txtHoraRecibido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:32"
            android:textAppearance="@style/TextAppearance.App.MessageTime"
            android:layout_gravity="start"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
