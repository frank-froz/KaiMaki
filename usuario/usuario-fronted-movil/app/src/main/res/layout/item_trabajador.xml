<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/workerCardBackground"
    app:strokeColor="@color/outline"
    app:strokeWidth="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large">

        <!-- Avatar del trabajador -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@drawable/worker_avatar_modern">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:shapeAppearanceOverlay="@style/Widget.App.WorkerAvatar" />

        </FrameLayout>

        <!-- Información del trabajador -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Nombre -->
            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Apellido"
                android:textAppearance="@style/TextAppearance.App.WorkerName"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Chips de oficios -->
            <LinearLayout
                android:id="@+id/layoutOficios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_small"
                android:gravity="start" />

            <!-- Ubicación -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/colorPrimary"
                    android:layout_marginEnd="@dimen/spacing_small" />

                <TextView
                    android:id="@+id/txtUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distrito, Ciudad"
                    android:textAppearance="@style/TextAppearance.App.WorkerLocation" />

            </LinearLayout>

        </LinearLayout>

        <!-- Indicador de acción -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/iconTint"
            android:rotation="180"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>