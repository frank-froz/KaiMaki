<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra exterior -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/shadowMedium" />
            <size android:width="124dp" android:height="124dp" />
        </shape>
    </item>
    <!-- Borde -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/profileAvatarBorder" />
        </shape>
    </item>
    <!-- Fondo interior -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/surface" />
        </shape>
    </item>
</layer-list> 